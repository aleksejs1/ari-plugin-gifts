{
    "name": "@crm-plugins/gift-plugin",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
        "build": "tsc && vite build",
        "build:watch": "vite build --watch",
        "serve": "http-server dist -p 5001 --cors -c-1",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "vitest",
        "coverage": "vitest run --coverage"
    },
    "peerDependencies": {
        "@ari/plugin-sdk": "*",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@testing-library/react": "^16.0.0",
        "@types/node": "^20.0.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "autoprefixer": "^10.4.23",
        "concurrently": "^9.2.1",
        "@ari/eslint-config": "*",
        "http-server": "^14.1.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.3.3",
        "vite": "^4.5.3",
        "vitest": "^0.30.0"
    },
    "dependencies": {
        "react-hook-form": "^7.51.5"
    }
}